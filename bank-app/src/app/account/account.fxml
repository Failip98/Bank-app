<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.account.AccountController">
   <children>
      <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
         <children>
            <ScrollPane id="scrollPane" fx:id="scrollPane" prefHeight="200.0" prefWidth="455.0">
               <content>
                  <VBox id="transactionBox" fx:id="transactionBox" prefHeight="200.0" prefWidth="177.0" />
               </content>
            </ScrollPane>
         </children>
      </VBox>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <left>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <TextField id="TextField_account_id" fx:id="TextField_account_id" promptText="Account id" />
                  <Button id="btn_loadTenTransactions" fx:id="btn_loadTenTransactions" mnemonicParsing="false" text="Load Last TenTransactions" />
                  <Button id="btn_loadAllTransactions" fx:id="btn_loadAllTransactions" mnemonicParsing="false" text="Load All Transactions" />
                  <Button id="btn_backhome" fx:id="btn_backhome" mnemonicParsing="false" text="Back Home" />
